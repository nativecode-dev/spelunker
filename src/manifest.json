{
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "Spelunker",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles/spelunker.css"],
    "js": ["content.js"]
  }],
  "content_security_policy": "default-src 'self'; script-src 'self' http://localhost:3000 https://localhost:3000 'unsafe-eval'; connect-src http://localhost:3000 https://localhost:3000; style-src * 'unsafe-inline' 'self' blob:; img-src 'self' data:;",
  "description": "Spelunker",
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png"
  },
  "manifest_version": 2,
  "name": "spelunker",
  "permissions": [
    "contextMenus",
    "management",
    "storage",
    "tabs",
    "https://github.com/*"
  ],
  "version": "{{package.version}}"
}
