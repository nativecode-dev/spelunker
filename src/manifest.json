{
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Spelunker",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles.css"],
    "js": ["vendor.js", "content.js"]
  }],
  "description": "Spelunker",
  "icons": {
    "16": "icons/icon-16.png",
    "24": "icons/icon-24.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png"
  },
  "manifest_version": 2,
  "name": "spelunker",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "management",
    "storage",
    "system.display",
    "tabs",
    "<all_urls>"
  ],
  "version": "0.1.0"
}
