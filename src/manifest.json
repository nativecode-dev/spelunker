{
  "background": {
    "persistent": false,
    "scripts": ["{{{bundle.vendor.source}}}", "background.js"]
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "{{package.description}}",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles/spelunker.css"],
    "js": ["content.js"]
  }],
  "description": "Spelunker",
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "64": "assets/icon-64.png"
  },
  "manifest_version": 2,
  "name": "{{package.name}}",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "management",
    "storage",
    "system.display",
    "tabs",
    "<all_urls>"
  ],
  "version": "{{package.version}}"
}
