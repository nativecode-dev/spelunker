{
  "options": {
    "browserify": {
      "insertGlobals": true
    }
  },
  "source": {
    "html": ["src/**/*.html"],
    "manifest": ["src/manifest.json"],
    "png": ["src/**/*.png"],
    "scss": ["src/**/*.scss"],
    "ts": ["src/*.ts"]
  },
  "target": {
    "bundle": "dist/bundle.manifest.json",
    "dest": "dist",
    "js": ["dist/**/*.js"]
  }
}
